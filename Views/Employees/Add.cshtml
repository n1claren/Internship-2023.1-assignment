@model AddEmployeeFormModel

@{
    ViewData["Title"] = "Add an Employee";
}

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6 col-sm-12">
            <h2 class="heading-margin text-center">Add an Employee</h2>
            <span class="text-danger">@Html.ValidationSummary(false)</span>
            <form method="post">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter employee full name.">
                    <span asp-validation-for="FullName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter employee email.">
                    <span asp-validation-for="Email" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter emloyee phone number.">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth"></label>
                    <input asp-for="DateOfBirth" class="form-control">
                    <span asp-validation-for="DateOfBirth" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Salary"></label>
                    <input asp-for="Salary" type="number" class="form-control" placeholder="Enter employee salary.">
                    <span asp-validation-for="Salary" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary float-right" type="submit" value=" Add " />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}